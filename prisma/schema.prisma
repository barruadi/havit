generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  username      String    @unique
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  image         String?
  coin          Int?
}

model Activity {
  id            Int      @id @default(autoincrement())
  username      String    
  email         String    
  activityName  String
  status        String
  coin          Int
  habitName     String
  activityPicture String?
  date  DateTime?
}

model KondisiMental {
  username        String    @unique
  email           String    @unique
  date            DateTime
  depression      Float
  anxiety         Float
  stress          Float
  result          String
}


model Habit {
  username        String    @unique
  email           String    @unique
  habitName       String
  status          String
}

model KondisiGizi {
  username        String    
  email           String    
  date            DateTime
  carbohydrate    Float
  protein         Float
  fat             Float
  vitamin         Float
  calorie         Float
}

model PopQuiz {
  question        String    @unique
  option1        String
  option2        String
  option3        String
  option4        String
  answer         String
}
